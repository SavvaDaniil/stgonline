@using STG.ViewModels.TeacherViewModel;
@model TeacherLiteViewModel;

@{
    ViewData["Title"] = Model.name + " | STG";
    @using Microsoft.AspNetCore.Antiforgery;
    @inject IAntiforgery antiforgery
    var tokenSet = antiforgery.GetAndStoreTokens(Context);
}


<div class="container">

    <div class="col-12 teacher row align-items-start">

        <div class="col-12 col-lg-4 col-md-4 col-sm-8">
            <img src="@Model.posterSrc" class="img-fluid" />
        </div>
        <div class="col-12 col-lg-8 col-md-8 col-sm-4 short-info row">

            <div class="col-12">
                <h5 class="name">@Model.name</h5>
            </div>
            <div class="col-12">
                <hr />
            </div>
            <div class="col-12">
                <ul class="social">

                    @if(Model.instagram != null){

                    <li>
                        <a href="@Model.instagram" target="_blank">
                            <i class="fa fa-instagram" aria-hidden="true"></i>
                        </a>
                    </li>

                    }


                </ul>
            </div>


            <div class="col-12">
                <div class="info">
                    <h5>О преподавателе</h5>
                    @Html.Raw(Model.description)
                </div>
            </div>

        </div>






    </div>

